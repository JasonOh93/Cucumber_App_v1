<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:id="@+id/recycler_item_frag_hospital_pharmacy_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/recycler_item_frag_hospital_pharmacy_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/recycler_item_frag_hospital_pharmacy_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_item_frag_hospital_pharmacy_name_tv"
            android:layout_toLeftOf="@id/recycler_item_frag_hospital_pharmacy_favorite_tg"
            android:text="주소"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/recycler_item_frag_hospital_pharmacy_tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_item_frag_hospital_pharmacy_address_tv"
            android:text="전화번호"
            android:textColor="@android:color/black"/>

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/recycler_item_frag_hospital_pharmacy_favorite_tg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/frag_hospi_pharm_favorite_star_selector"
            android:textOff=" "
            android:textOn=" "/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>