<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">

    <ImageView
        android:id="@+id/iv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@id/tv_intro_title1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_intro_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/intro_app_title1"
        android:layout_centerInParent="true"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/tv_intro_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/intro_app_title2"
        android:layout_below="@id/tv_intro_title1"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="italic|bold"/>

</RelativeLayout>