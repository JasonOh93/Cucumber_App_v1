<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">

        <shape android:shape="rectangle">
            <stroke android:color="@color/colorPrimary_my" android:width="1dp"/>
            <solid android:color="@color/colorPrimary_my"/>
            <corners android:radius="30dp"/>
            <padding android:right="8dp" android:top="8dp" android:left="8dp" android:bottom="8dp"/>
        </shape>

    </item>

    <item android:state_selected="false">

        <shape android:shape="rectangle">
            <stroke android:color="@color/colorPrimary_translucent_my" android:width="1dp"/>
            <solid android:color="@color/colorPrimary_translucent_my"/>
            <corners android:radius="30dp"/>
        </shape>

    </item>

</selector>